{
  "buildCommand": "npm run build",
  "outputDirectory": "/build",
  "build": {
    "env": {
      "NODEJS_AWS_HANDLER_NAME": "handler"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/api/main.ts",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "src/api"
    }
  ]
}